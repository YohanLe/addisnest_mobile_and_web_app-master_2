# Addinest Real Estate Platform - Environment Variables
# Development configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection (using local MongoDB for development)
MONGO_URI=mongodb://localhost:27017/addisnest

# JWT Authentication
JWT_SECRET=addisnest_development_jwt_secret_key_2024_secure_random_string_12345
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (SendGrid) - Add your keys when needed
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=contact@addisnest.com

# File Upload Configuration
MAX_FILE_SIZE=5000000
FILE_UPLOAD_PATH=./uploads
FILE_UPLOAD_BASE_URL=http://localhost:5000/uploads

# Payment Integration (if applicable)
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_API_SECRET=your_payment_api_secret

# Feature Flags
ENABLE_PROPERTY_EDIT_FIX=true
ENABLE_ADDRESS_FIX=true
ENABLE_IMAGE_FORMAT_FIX=true
